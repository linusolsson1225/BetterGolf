@using BetterGolfASP.Domain.Models.Products
@model Product

@{
    ViewBag.Title = Model.Name + " - BetterGolf";
}

<div class="container py-5">
    <div class="row g-5 align-items-center">

        <!-- Produktbilder -->
        <div class="col-md-6 text-center">
            <div class="product-image-wrapper border rounded-4 shadow-sm p-3 bg-white">

                @if (Model.ImgUrls != null && Model.ImgUrls.Count > 0)
                {
                    <!-- Huvudbild -->
                    <div class="mb-3">
                        <img id="mainProductImage"
                             src="@Model.ImgUrls[0]"
                             alt="@Model.Name"
                             class="img-fluid rounded shadow-sm"
                             style="max-height: 400px; object-fit: contain;" />
                    </div>

                    <!-- Thumbnails -->
                    <div class="d-flex flex-wrap justify-content-center gap-2">
                        @for (int i = 0; i < Model.ImgUrls.Count; i++)
                        {
                            var imageUrl = Model.ImgUrls[i];
                            <img src="@imageUrl"
                                 alt="@Model.Name"
                                 class="img-thumbnail thumbnail-img"
                                 style="width: 80px; height: 80px; object-fit: cover; cursor: pointer;" />
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No images uploaded yet.</p>
                }

            </div>
        </div>

        <!-- Produktinformation -->
        <div class="col-md-6">
            <h1 class="fw-bold mb-3">@Model.Name</h1>
            <p class="text-muted">@Model.Description</p>

            <div class="d-flex align-items-center mb-3">
                <span class="h3 text-success fw-semibold me-3">
                    @Model.Price.ToString("C")
                </span>
                @if ((Model.Stock ?? 0) > 0)
                {
                    <span class="badge bg-success">In Stock</span>
                }
                else
                {
                    <span class="badge bg-danger">Out of Stock</span>
                }
            </div>

            <hr>

            <div class="d-flex gap-3">
                <button class="btn btn-success add-to-cart"
                        data-id="@Model.ProductID"
                        data-name="@Model.Name"
                        data-price="@Model.Price"
                        data-quantity="1">
                    Add to Cart
                </button>

                <a href="@Url.Action("Index", "Products")" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="bi bi-arrow-left me-2"></i>Back to Products
                </a>
            </div>
        </div>
    </div>
</div>
