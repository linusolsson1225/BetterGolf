@using BetterGolfASP.Domain.Models.Products
@model Product

<div class="col-sm-6 col-md-4 col-lg-3 mb-4">
    <div class="card h-100 shadow-sm border-0 product-card">

        @if (Model.ImgUrls != null && Model.ImgUrls.Count > 0)
        {
            <img src="@Model.ImgUrls[0]"
                 class="card-img-top"
                 alt="@Model.Name" />
        }
        else
        {
            <div class="card-img-top placeholder-img d-flex align-items-center justify-content-center">
                <span class="text-muted">No Image</span>
            </div>
        }

        <div class="card-body text-center">
            <h5 class="card-title">@Model.Name</h5>
            <p class="text-success fw-bold">@Model.Price.ToString("C")</p>
            <a href="@Url.Action("Details", "Products", new { id = Model.ProductID })"
               class="btn btn-sm btn-outline-success">View</a>
        </div>
    </div>
</div>
